@model InsuranceManagementApp.Models.Insurance

@{
    ViewData["Title"] = "Create";
}

<h2>Pojištění</h2>

<h4>Nový záznam</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- Výbšr pojistníka -->
            <div class="form-group">
                <label asp-for="PolicyHolderId" class="control-label"></label>
                <select asp-for="PolicyHolderId" class="form-control" asp-items="ViewBag.PolicyHolderId">
                    <option value="">-- Vyberte Pojistníka --</option>
                </select>
                <span asp-validation-for="PolicyHolderId" class="text-danger"></span>
            </div>
            <!-- Select pro Enum výběru typu pojištění -->
            <div class="form-group">
                <label asp-for="InsuranceType" class="form-label">Typ pojištění</label>
                <select asp-for="InsuranceType" class="form-select">
                    @foreach (var insuranceType in ViewBag.InsuranceTypes)
                    {
                        <option value="@insuranceType">@insuranceType</option>
                    }
                </select>
                <span asp-validation-for="InsuranceType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Vytvořit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn" asp-action="Index">Zpět na výpis</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
