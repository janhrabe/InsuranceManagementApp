<!DOCTYPE html>
<html lang="cs">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="JanHrabe" />
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" href="~/images/ikona.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    @await RenderSectionAsync("CSS", required: false)
</head>

<body>

    <header>
        <div  id="logo">
            <h1><a asp-controller="Home" asp-action="Index">InsuranceManagementApp</a></h1>
        </div>
        <nav class="navbar navbar-expand-lg">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav nav justify-content-end mr-auto">
                    <li class="nav-item"><a asp-controller="PolicyHolder" asp-action="Index">Pojištěnci</a></li>
                    <li class="nav-item"><a asp-controller="Insurance" asp-action="Index">Pojištění</a></li>
                    <li class="nav-item"><a asp-controller="InsuranceEvent" asp-action="Index">Pojistná Událost</a></li>
                    <li class="nav-item"><a asp-controller="ContactForm" asp-action="Create">Kontaktní Formulář</a></li>
                    <li class="nav-item"><a asp-controller="Account" asp-action="Login">Přihlásit se</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="container-fluid-px-3 overflow-auto">
            @RenderBody()
        </main>
    </div>

    <footer>

        <p>Pro závěrečný projekt u <a href="https://www.itnetwork.cz" target="_blank">itnetwork</a> vytvořil &copy;Jan
            Hrabě, 2024.</p>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
