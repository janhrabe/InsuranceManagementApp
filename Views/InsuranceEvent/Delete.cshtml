@model InsuranceManagementApp.Models.InsuranceEvent

@{
    ViewData["Title"] = "Delete";
}

<h2>Pojistná Událost</h2>

<h3>Opravdu chcete smazat tento záznam?</h3>
<div>
    <h4>Smazat záznam</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PolicyHolder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PolicyHolder.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Insurance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Insurance.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventStatus)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Smazat" class="btn btn-danger" /> |
        <a class="btn" asp-action="Index">Zpět na výpis</a>
    </form>
</div>
